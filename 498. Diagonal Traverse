class Solution {
public:
    vector<int> findDiagonalOrder(vector<vector<int>>& matrix) 
    {
    
     int m=matrix.size();
     if(m==0)
         return {};
     int n=matrix[0].size();
      vector<int>ans(m*n);
     int i=0,j=0,idx=0;
     while(i<m && j<n)
     {
      // move up
      while(i>=0 && j<n)
      {
       ans[idx++]=matrix[i][j];
       i--;
       j++;
      }
      i++;
      if(j==n)
      {
       j--;
       i++;
      }
      // move down
      while(j>=0 && i<m)
      {
       ans[idx++]=matrix[i][j];
       i++;
       j--;
      }
      j++;
      if(i==m)
      {
       i--;
       j++;
      }
     }
     return ans;
        
     
    }
};
